{
  "name": "wolt-backend",
  "version": "1.0.0",
  "description": "wolt summer task(backend)",
  "main": "index.js",
  "scripts": {
    "test": "jest --detectOpenHandles",
    "dev": "nodemon index.ts",
    "dev2": "tsc",
    "start": "node dist/index.js",
    "build:ui": "npm run dev2 && rm -rf build && cd frontend && npm run build && cp -r build ../",
    "lint": "eslint '*/**/*.{js,ts,tsx}' --quiet --fix",
    "frontend:install": "cd frontend && npm i"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adityagyawali/wolt-task.git"
  },
  "keywords": [
    "Typescript",
    "Node",
    "Express"
  ],
  "author": "Aditya Gyawali",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/adityagyawali/wolt-task/issues"
  },
  "homepage": "https://github.com/adityagyawali/wolt-task#readme",
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "date-fns": "^2.16.1",
    "express": "^4.17.1",
    "jest": "^26.6.3",
    "supertest": "^6.1.2",
    "ts-jest": "^26.4.4"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/cors": "^2.8.9",
    "@types/express": "^4.17.11",
    "@types/node": "^14.14.22",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "@types/supertest": "^2.0.10"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    },
    "extends": [
      "plugin:@typescript-eslint/recommended"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/__tests__/*.+(ts|tsx|js)"
    ]
  }
}
